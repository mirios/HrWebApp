<div class="login-root">
    <div class="box-root flex-flex flex-direction--column" style="min-height: 100vh;flex-grow: 1;">
        <div class="loginbackground box-background--white padding-top--64">
            <div class="loginbackground-gridContainer">
                <div class="box-root flex-flex" style="grid-area: top / start / 8 / end;">
                    <div class="box-root" style="background-image: linear-gradient(white 0%, rgb(247, 250, 252) 33%); flex-grow: 1;">
                    </div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 4 / 2 / auto / 5;">
                    <div class="box-root box-divider--light-all-2 animationLeftRight tans3s" style="flex-grow: 1;"></div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 6 / start / auto / 2;">
                    <div class="box-root box-background--blue800" style="flex-grow: 1;"></div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 7 / start / auto / 4;">
                    <div class="box-root box-background--blue animationLeftRight" style="flex-grow: 1;"></div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 8 / 4 / auto / 6;">
                    <div class="box-root box-background--gray100 animationLeftRight tans3s" style="flex-grow: 1;"></div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 2 / 15 / auto / end;">
                    <div class="box-root box-background--cyan200 animationRightLeft tans4s" style="flex-grow: 1;"></div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 3 / 14 / auto / end;">
                    <div class="box-root box-background--blue animationRightLeft" style="flex-grow: 1;"></div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 4 / 17 / auto / 20;">
                    <div class="box-root box-background--gray100 animationRightLeft tans4s" style="flex-grow: 1;"></div>
                </div>
                <div class="box-root flex-flex" style="grid-area: 5 / 14 / auto / 17;">
                    <div class="box-root box-divider--light-all-2 animationRightLeft tans3s" style="flex-grow: 1;"></div>
                </div>
            </div>
        </div>
        <div class="box-root padding-top--24 flex-flex flex-direction--column" style="flex-grow: 1; z-index: 9;">
            <div class="table100 ver1 m-b-110">
                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    <table data-vertable="ver1" id="table1" class="test">
                        <thead>
                            <tr class="row100 head">
                                <th class="item_checkbox"></th>
                                <th></th>
                                <th class="column100">Ім'я Співробітника</th>
                                <th class="column100">e-mail</th>
                                <th class="column100">Дата Народження</th>
                                <th class="column100">Номер Телефону</th>
                                <th class="column100">Відділ</th>
                                <th class="column100">Посада</th>
                                <th class="column100">Адреса</th>
                                <th class="column100">Серія та номер паспорта</th>
                                <th class="column100">Індентифікаційний код</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="column_item" colspan="13">
                                    <input hidden placeholder="Search" class="search" />
                                    <a hidden><button type="button" class="btn btn-outline-secondary btn_table">Пошук</button></a>
                                    <a asp-controller="Account" asp-action="Register"><button type="button" class="btn btn-outline-primary btn_table">Додати</button></a>
                                    <a><button id="button_" type="button" class="btn btn-outline-primary btn_table">Видалити</button></a>
                                    <a><button id="buttonEdit_" type="button" class="btn btn-outline-primary btn_table view">Редагувати</button></a>
                                </td>
                            </tr>
                            <tr style="height: 40px"></tr>
                            @foreach (var item in ViewBag.staffs)
                            {
                                <tr class="row100" Id="tr_@item.Id">
                                    <td class="item_checkbox"><input id="@item.Id" type='checkbox' /></td>
                                    <td><img class="img-staff" src="@item.Image" /></td>
                                    <td class="column100">@item.FirstName @item.LastName</td>
                                    <td class="column100">@item.Email</td>
                                    <td class="column100">@item.DateStaff</td>
                                    <td class="column100">@item.PhoneNumber</td>
                                    <td class="column100">@item.Department</td>
                                    <td class="column100">@item.RoleInDepartment</td>
                                    <td class="column100">@item.Address.Street @item.Address.City @item.Address.State</td>
                                    <td class="column100">@item.PassportCode</td>
                                    <td class="column100">@item.TaxpayerCode</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else if (User.Identity.IsAuthenticated && User.IsInRole("user"))
                {
                    <table data-vertable="ver1" id="table1" class="test">
                        <thead>
                            <tr class="row100 head">
                                <th></th>
                                <th class="column100">Ім'я Співробітника</th>
                                <th class="column100">e-mail</th>
                                <th class="column100">Дата Народження</th>
                                <th class="column100">Відділ</th>
                                <th class="column100">Посада</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="height: 40px"></tr>
                            @foreach (var item in ViewBag.staffs)
                            {
                                <tr class="row100" Id="tr_@item.Id">
                                    <td><img class="img-staff" src="@item.Image" /></td>
                                    <td class="column100">@item.FirstName @item.LastName</td>
                                    <td class="column100">@item.Email</td>
                                    <td class="column100">@item.DateStaff</td>
                                    <td class="column100">@item.Department</td>
                                    <td class="column100">@item.RoleInDepartment</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

